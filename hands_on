!/bin/bash

# Declare arrays to store Employee Records
employee_names=()
employee_numbers=()
telephone_numbers=()

# Function to add an Employee Record
function add_record() {
    echo "Enter Employee Name:"
    read emp_name
    echo "Enter Employee Number:"
    read emp_number
    echo "Enter Telephone Number:"
    read telephone_number
    
    # Append record to the arrays
    employee_names+=("$emp_name")
    employee_numbers+=("$emp_number")
    telephone_numbers+=("$telephone_number")
    
    echo "Employee Record added successfully."
}

# Function to delete an Employee Record
function delete_record() {
    echo "Enter the name of the Employee to delete the record:"
    read emp_name
    
    # Search for the Employee Name in the array
    for index in "${!employee_names[@]}"; do
        if [ "${employee_names[$index]}" = "$emp_name" ]; then
            unset employee_names[$index]
            unset employee_numbers[$index]
            unset telephone_numbers[$index]
            echo "Employee Record deleted successfully."
            return
        fi
    done
    
    echo "Employee Name not found in the records."
}

# Function to search and display an Employee Record
function search_record() {
    echo "Enter the name of the Employee to search the record:"
    read emp_name
    
    # Search for the Employee Name in the array
    for index in "${!employee_names[@]}"; do
        if [ "${employee_names[$index]}" = "$emp_name" ]; then
            echo "Employee Record for $emp_name:"
            echo "Employee Name: ${employee_names[$index]}"
            echo "Employee Number: ${employee_numbers[$index]}"
            echo "Telephone Number: ${telephone_numbers[$index]}"
            return
        fi
    done
    
    echo "Employee Name not found in the records."
}

# Function to sort and list all Employee Records
function list_records() {
    if [ ${#employee_names[@]} -eq 0 ]; then
        echo "No Employee Records found."
    else
        echo "Listing all Employee Records:"
        for index in "${!employee_names[@]}"; do
            echo "Employee Name: ${employee_names[$index]}"
            echo "Employee Number: ${employee_numbers[$index]}"
            echo "Telephone Number: ${telephone_numbers[$index]}"
            echo "-------------------------"
        done
    fi
}

# Menu function
function show_menu() {
    echo "Menu:"
    echo "1. Add Employee Record"
    echo "2. Delete Employee Record"
    echo "3. Search and Display Employee Record"
    echo "4. List all Employee Records"
    echo "5. Exit"
}

# Main loop
while true; do
    show_menu
    echo "Enter your choice:"
    read choice
    
    case $choice in
        1)
            add_record
            ;;
        2)
            delete_record
            ;;
        3)
            search_record
            ;;
        4)
            list_records
            ;;
        5)
            echo "Exiting..."
            exit 0
            ;;
        *)
            echo "Invalid choice. Please try again."
            ;;
    esac
done
